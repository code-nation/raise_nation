.row
  .col-lg-5.d-none.d-lg-block.bg-register-image
  .col-lg-7
    .p-5
      .text-center
        %h1.h4.text-gray-900.mb-4 Change your password
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class: 'user') do |f|
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
          %br/
        .form-group
          = f.password_field :password, autocomplete: "new-password", class: 'form-control form-control-user', placeholder: 'Password'
        .form-group
          = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-control-user', placeholder: 'Password Confirmation'
        = f.submit "Change my password", class: 'btn btn-primary btn-user btn-block'
      %hr/
      = render "devise/shared/links"
