%p= "You have been added by #{@inviter_name} to collaborate in the RaiseNation account for #{@org_name}"

- if @raw_invitation_token.present?
  %p Click on the link below to set your password.
  %p= link_to t("devise.mailer.invitation_instructions.accept"), accept_invitation_url(@user, invitation_token: @raw_invitation_token)
  - if @user.invitation_due_at
    %p= t("devise.mailer.invitation_instructions.accept_until", due_date: l(@user.invitation_due_at, format: :'devise.mailer.invitation_instructions.accept_until_format'))
  %p= t("devise.mailer.invitation_instructions.ignore")
