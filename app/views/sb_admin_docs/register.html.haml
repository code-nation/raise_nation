.row
  .col-lg-5.d-none.d-lg-block.bg-register-image
  .col-lg-7
    .p-5
      .text-center
        %h1.h4.text-gray-900.mb-4 Create an Account!
      %form.user
        .form-group.row
          .col-sm-6.mb-3.mb-sm-0
            %input#exampleFirstName.form-control.form-control-user{:placeholder => "First Name", :type => "text"}/
          .col-sm-6
            %input#exampleLastName.form-control.form-control-user{:placeholder => "Last Name", :type => "text"}/
        .form-group
          %input#exampleInputEmail.form-control.form-control-user{:placeholder => "Email Address", :type => "email"}/
        .form-group.row
          .col-sm-6.mb-3.mb-sm-0
            %input#exampleInputPassword.form-control.form-control-user{:placeholder => "Password", :type => "password"}/
          .col-sm-6
            %input#exampleRepeatPassword.form-control.form-control-user{:placeholder => "Repeat Password", :type => "password"}/
        %a.btn.btn-primary.btn-user.btn-block{:href => login_sb_admin_docs_path}
          Register Account
        %hr/
        %a.btn.btn-google.btn-user.btn-block{:href => sb_admin_docs_path}
          %i.fab.fa-google.fa-fw
          Register with Google
        %a.btn.btn-facebook.btn-user.btn-block{:href => sb_admin_docs_path}
          %i.fab.fa-facebook-f.fa-fw
          Register with Facebook
      %hr/
      .text-center
        %a.small{:href => forgot_password_sb_admin_docs_path} Forgot Password?
      .text-center
        %a.small{:href => login_sb_admin_docs_path} Already have an account? Login!
