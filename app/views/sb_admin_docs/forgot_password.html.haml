.row
  .col-lg-6.d-none.d-lg-block.bg-password-image
  .col-lg-6
    .p-5
      .text-center
        %h1.h4.text-gray-900.mb-2 Forgot Your Password?
        %p.mb-4 We get it, stuff happens. Just enter your email address below and we'll send you a link to reset your password!
      %form.user
        .form-group
          %input#exampleInputEmail.form-control.form-control-user{"aria-describedby" => "emailHelp", :placeholder => "Enter Email Address...", :type => "email"}/
        %a.btn.btn-primary.btn-user.btn-block{:href => login_sb_admin_docs_path}
          Reset Password
      %hr/
      .text-center
        %a.small{:href => register_sb_admin_docs_path} Create an Account!
      .text-center
        %a.small{:href => login_sb_admin_docs_path} Already have an account? Login!
