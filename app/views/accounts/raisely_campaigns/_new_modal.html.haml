.modal-dialog{:role => "document"}
  .modal-content
    .modal-header
      %h5.modal-title Add Campaign
      %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
        %span{"aria-hidden" => "true"} Ã—
    .modal-body
      = bootstrap_form_for @campaign, url: accounts_raisely_campaigns_path(account_id: params[:account_id]) do |f|
        = f.text_field :name
        = f.text_field :campaign_uuid
        = f.text_field :api_key
        = f.submit 'Add Campaign', class: 'btn btn-primary btn-sm add-campaign-submit'
